<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenuActivity"
    android:onClick="onClick_Bench">

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="@string/BENCH"
        android:id="@+id/bench_Button"
        android:onClick="onClick_Bench"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:text="@string/SQUAT"
        android:id="@+id/squat_Button"
        android:onClick="onClick_Squat"
        android:layout_below="@+id/bench_Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:text="@string/DEADLIFT"
        android:id="@+id/deadlift_button"
        android:onClick="onClick_Deadlift"
        android:layout_below="@+id/squat_Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:text="@string/OVERHEAD"
        android:id="@+id/overhead_Button"
        android:onClick="onClick_Overhead"
        android:layout_below="@+id/deadlift_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
